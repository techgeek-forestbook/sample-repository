<body>
    <div id="overlay"></div>
    <div id="contactFormContainer">
        <button class="close-btn">×</button>
        <div contactform-embed='358952'></div>
    </div>

    <script>
        $(document).ready(function() {
            var excludedUrls = [
                '/cart',
                '/pages/pricing',
                '/pages/schedule'
            ];

            var currentUrl = window.location.pathname;
            console.log(currentUrl);

            if (excludedUrls.indexOf(currentUrl) === -1) {
                // 初回表示（10秒後）
                setTimeout(function() {
                    if (!sessionStorage.getItem('popupShown')) {
                        showPopup();
                    }
                }, 10000); // 10秒後に表示

                // マウスがページの上端に移動したときに表示
                $(document).on('mouseleave', function(e) {
                    if (e.clientY < 0) {
                        showPopup();
                    }
                });
            }

            // 閉じるボタンとオーバーレイクリックで閉じる
            $('.close-btn, #overlay').click(function() {
                $('#overlay, #contactFormContainer').fadeOut();
            });

            function showPopup() {
                if (!sessionStorage.getItem('popupShown')) {
                    $('#overlay, #contactFormContainer').fadeIn();
                    sessionStorage.setItem('popupShown', 'true');
                    gtag('event', 'popup_display', {
                        'event_category': 'Popups',
                        'event_label': 'Contact Form Popup',
                        'value': 1
                    });
                }
            }
        });
    </script>
</body>
