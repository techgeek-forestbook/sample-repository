dy(function() {\n            \/\/ 初回表示（10秒後）\n            setTimeout(function() {\n                if (!sessionStorage.getItem('popupShown')) {\n                    showPopup();\n                }\n            }, 10000); \/\/ 10秒後に表示\n\n            \/\/ マウスがページの上端に移動したときに表示\n            $(document).on('mouseleave', function(e) {\n                if (e.clientY < 0) {\n                    showPopup();\n                }\n            });\n\n            \/\/ 閉じるボタンとオーバーレイクリックで閉じる\n            $('.close-btn, #overlay').click(function() {\n                $('#overlay, #contactFormContainer').fadeOut();\n            });\n\n            function showPopup() {\n                if (!sessionStorage.getItem('popupShown')) {\n                    $('#overlay, #contactFormContainer').fadeIn();\n                    sessionStorage.setItem('popupShown', 'true');\n                }\n            }\n        });\n    <\/script>\n<\/body>\n<\/html>","color_scheme":"background-1","padding_top":40,"padding_bottom":52}}},"order":["main","17164400220d9b7f2c","custom_liquid_WkyTYW"]}