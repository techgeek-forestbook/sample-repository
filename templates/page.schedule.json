sy\": \"#b3b3b3\",\n            \"sb_available\": \"#dbd6ff\"\n        },\n        \"timeline\": \"modern\",\n        \"datepicker\": \"top_calendar\",\n        \"is_rtl\": false,\n        \"app_config\": {\n            \"clear_session\": 0,\n            \"allow_switch_to_ada\": 0,\n            \"predefined\": {\n                \"provider\": provider, \/\/ ここでクエリパラメータまたはデフォルト値を使用\n                \"service\": \"17\",\n                \"category\": \"2\"\n            }\n        }\n    });\n\n    \/\/ ウィジェットのロード完了を検知するためのイベントリスナー\n    document.addEventListener(\"DOMContentLoaded\", function () {\n        var iframe = document.querySelector('iframe');\n        if (iframe) {\n            iframe.onload = function () {\n                console.log(\"Simplybookウィジェットがロードされました。\");\n                \/\/ ロード完了後に実行するアクションをここに記述\n                $('#loading').fadeOut('slow');\n                $('body').css('overflow', 'auto');\n                document.body.style.overflow = 'visible';\n            };\n\n            \/\/ タイムアウトを設定\n            setTimeout(function () {\n                if ($('#loading').is(':visible')) {\n                    console.log(\"ロードタイムアウトによりロード画面を非表示にします。\");\n                    $('#loading').fadeOut('slow');\n                    $('body').css('overflow', 'auto');\n                    document.body.style.overflow = 'visible';\n                }\n            }, 5000); \/\/ 5000 milliseconds = 5 seconds\n        }\n    });\n\n<\/script>","color_scheme":"background-1","padding_top":0,"padding_bottom":52}}},"order":["main","custom_liquid_QpdRdX"]}